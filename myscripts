--[[
    REMOTE MIMICRY: "KILL AURA" STYLE
    Bypass: No Hooks, No Memory Manipulation, No Tool Modification.
    Logic: Finds the RemoteEvent and fires it manually.
]]

local CONFIG = {
    MULTIPLIER = 5, -- Keep low (2-5) to avoid Server Sanity Kicks
    RANGE = 15,     -- Studs
    INTERVAL = 0.2  -- Attack speed (seconds)
}

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

-- // UI SETUP \\ --
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "RemoteMimic"
ScreenGui.Parent = game:GetService("CoreGui")

local Label = Instance.new("TextLabel")
Label.Size = UDim2.new(0, 200, 0, 40)
Label.Position = UDim2.new(0.5, -100, 0.1, 0)
Label.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Label.TextColor3 = Color3.fromRGB(255, 0, 0)
Label.Text = "OFFLINE"
Label.Parent = ScreenGui

-- // 1. FIND THE REMOTE \\ --
-- We scan the character for the damage remote based on your dump
local function GetDamageRemote()
    local char = LocalPlayer.Character
    if not char then return nil end
    
    -- Common names based on your dump
    local targets = {"SwordDamage", "Damage", "InflictDamage", "RemoteEvent"}
    
    for _, tool in pairs(char:GetChildren()) do
        if tool:IsA("Tool") then
            for _, child in pairs(tool:GetDescendants()) do
                if child:IsA("RemoteEvent") then
                    -- If it's inside a tool, it's likely the damage remote
                    return child, tool
                end
            end
        end
    end
    
    -- Check Character directly
    for _, child in pairs(char:GetChildren()) do
        if child:IsA("RemoteEvent") and (child.Name == "SwordDamage" or child.Name == "Event") then
            return child, nil
        end
    end
    
    return nil, nil
end

-- // 2. ATTACK LOGIC \\ --
local function AttackNear()
    local remote, tool = GetDamageRemote()
    
    if not remote then 
        Label.Text = "NO REMOTE FOUND"
        Label.TextColor3 = Color3.fromRGB(255, 0, 0)
        return 
    end
    
    -- If we need a tool but don't have one equipped
    if not tool and LocalPlayer.Character:FindFirstChildWhichIsA("Tool") then
        tool = LocalPlayer.Character:FindFirstChildWhichIsA("Tool")
    end

    Label.Text = "AURA ACTIVE: " .. remote.Name
    Label.TextColor3 = Color3.fromRGB(0, 255, 0)

    -- Find closest enemy
    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            local myRoot = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
            if myRoot then
                local dist = (player.Character.HumanoidRootPart.Position - myRoot.Position).Magnitude
                
                if dist < CONFIG.RANGE then
                    -- FIRE THE REMOTE DIRECTLY
                    -- Args: TargetHumanoid, Tool, Multiplier, Combo, Size, Grip
                    local args = {
                        [1] = player.Character.Humanoid,
                        [2] = tool, -- Can be nil if remote doesn't need it
                        [3] = CONFIG.MULTIPLIER,
                        [4] = 1, -- Combo
                        [5] = Vector3.new(1,1,1), -- Hitbox
                        [6] = Vector3.new(0,0,0) -- Grip
                    }
                    
                    remote:FireServer(unpack(args))
                end
            end
        end
    end
end

-- // 3. LOOP \\ --
task.spawn(function()
    while true do
        task.wait(CONFIG.INTERVAL)
        pcall(AttackNear)
    end
end)
