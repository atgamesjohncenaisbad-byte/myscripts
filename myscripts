--[[
    STEALTH LIMIT-TESTER (Max Legal Multiplier)
    Target: Spoofing Gamepass (2x) + Max Combo (10)
    Bypass Strategy: Stay under the "Massive Damage" server threshold.
--]]

local Players = game:GetService("Players")
local lp = Players.LocalPlayer

-- The "Sweet Spot" 
-- Legitimate Gamepass = 2. If we send 2.1 or 3, we get the "Massive Damage" kick.
local MAX_LEGAL_MULTI = 2 
local MAX_LEGAL_COMBO = 10

local function StealthInject()
    local count = 0
    for _, f in pairs(getgc(true)) do
        if type(f) == "function" and getfenv(f).script and getfenv(f).script.Name == "Client" then
            local name = debug.getinfo(f).name
            if name == "dealDamage" then
                -- var33_upvw (Multiplier) is Upvalue #10
                -- var16_upvw (Combo) is Upvalue #5
                debug.setupvalue(f, 10, MAX_LEGAL_MULTI)
                debug.setupvalue(f, 5, MAX_LEGAL_COMBO)
                count = count + 1
            end
        end
    end
    return count > 0
end

-- UI for Monitoring
local sg = Instance.new("ScreenGui", lp.PlayerGui)
local f = Instance.new("Frame", sg)
f.Size = UDim2.new(0, 200, 0, 60)
f.Position = UDim2.new(0, 10, 0.5, 0)
f.BackgroundColor3 = Color3.new(0,0,0)
f.BackgroundTransparency = 0.5

local function label(txt, y)
    local l = Instance.new("TextLabel", f)
    l.Size = UDim2.new(1, 0, 0, 20)
    l.Position = UDim2.new(0, 5, 0, y)
    l.Text = txt
    l.TextColor3 = Color3.new(1, 1, 1)
    l.Font = Enum.Font.Code
    l.TextXAlignment = "Left"
    l.BackgroundTransparency = 1
    return l
end

local Status = label("Status: Initializing...", 5)
local Info = label("Multi: 2x | Combo: 10", 30)

task.spawn(function()
    while true do
        if StealthInject() then
            Status.Text = "Status: ACTIVE (Spoofing Pass)"
            Status.TextColor3 = Color3.new(0, 1, 0)
        else
            Status.Text = "Status: Finding Function..."
            Status.TextColor3 = Color3.new(1, 1, 1)
        end
        task.wait(5)
    end
end)
