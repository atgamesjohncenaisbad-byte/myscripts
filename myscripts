--[[ 
    PROFESSIONAL TARGETED COMBAT TESTER
    Vector: Remote Spam & Dummy Logic Overload
    Bypass: No Metatable Hooks (Zero Detection for Namecall)
--]]

local Players = game:GetService("Players")
local lp = Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- remotes found in your dump
local SwordRemote = lp.Character:WaitForChild("SwordDamage")
local DummyRemote = ReplicatedStorage:FindFirstChild("DummyEvent")

-- Settings
local ATTACK_RANGE = 20 -- Studs
local ATTACK_SPEED = 0.1 -- Much faster than the 0.4 client default

-- UI for Debugging
local sg = Instance.new("ScreenGui", lp.PlayerGui)
local frame = Instance.new("Frame", sg)
frame.Size = UDim2.new(0, 250, 0, 100)
frame.Position = UDim2.new(0.5, -125, 0, 50)
frame.BackgroundColor3 = Color3.new(0,0,0)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 30)
title.Text = "SYSTEM: ADVANCED COMBAT"
title.TextColor3 = Color3.new(1, 0.8, 0)

local status = Instance.new("TextLabel", frame)
status.Size = UDim2.new(1, 0, 0, 70)
status.Position = UDim2.new(0, 0, 0, 30)
status.Text = "Awaiting Target..."
status.TextColor3 = Color3.new(1, 1, 1)

local function GetBestTool()
    return lp.Character:FindFirstChildWhichIsA("Tool")
end

-- MAIN EXECUTION LOOP
task.spawn(function()
    while task.wait(ATTACK_SPEED) do
        local char = lp.Character
        local tool = GetBestTool()
        
        if char and tool and tool:FindFirstChild("Handle") then
            local root = char:FindFirstChild("HumanoidRootPart")
            if not root then continue end

            -- Scan for enemies (Logic based on Workspace.Mobs in your dump)
            local targetFound = false
            for _, mob in pairs(workspace:GetDescendants()) do
                if mob:IsA("Humanoid") and mob.Parent ~= char and mob.Health > 0 then
                    local mobRoot = mob.Parent:FindFirstChild("HumanoidRootPart")
                    if mobRoot and (mobRoot.Position - root.Position).Magnitude <= ATTACK_RANGE then
                        
                        targetFound = true
                        status.Text = "Targeting: " .. mob.Parent.Name
                        
                        -- VULNERABILITY 1: Direct Remote Access
                        -- Bypassing the 0.4s cooldown and the .Touched requirement
                        -- Args: target, tool, multi, combo, size, grip
                        SwordRemote:FireServer(
                            mob, 
                            tool, 
                            1, -- Staying at 1x to avoid "Massive Damage" kick
                            10, -- Max combo for max base damage
                            tool.Handle.Size, 
                            tool.GripPos
                        )

                        -- VULNERABILITY 2: Dummy Remote Abuse
                        -- If it's a dummy, we use the specific DummyRemote found in line 82 of your dump
                        if mob.Parent:FindFirstChild("dummyScript") and DummyRemote then
                            -- We send a moderate number to avoid damage caps
                            DummyRemote:FireServer(100, mob) 
                        end
                    end
                end
            end
            
            if not targetFound then
                status.Text = "Searching for targets in range..."
            end
        else
            status.Text = "ERROR: Equip a Sword"
        end
    end
end)
